<div>
    {{#each posts as post}}
    <div class="card">
        <div class="card-header">
            <a href="/post/{{post.id}}"><h3>{{post.title}}</h3></a>
            <p>Posted by {{post.user.username}} on {{post.user.createdAt}}</p>
        </div>
        <div class="card-body">
            <p>{{post.text}}</p>
        </div>
    </div>
</div>